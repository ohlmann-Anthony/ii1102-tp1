import java.util.Scanner;

public class Pave {
	public static void main (String [] args){

	// On déclare les variables.
	float Hauteur;
	float Longueur; 
	float Largeur;
	float Volume;
	
	// On initialise un Scanner.
	Scanner scan = new Scanner (System.in);
	// On demande les variables à l'utilisateur et vérifie si 		c'est négatif.
	do {
	Hauteur = scan.nextFloat();
	if (Hauteur<0){
	System.out.println("Vous avez tapé un nombre négatif");
 	}
	} while (Hauteur < 0);
	do {
	Longueur = scan.nextFloat();
	if (Longueur<0){
	System.out.println("Vous avez tapé un nombre négatif");
 	}
	} while (Longueur <0);
	do {
	Largeur = scan.nextFloat();
	if (Largeur<0){
	System.out.println("Vous avez tapé un nombre négatif");
 	}
	} while (Largeur < 0); 
	
	// On calcule le volume du pavé.
	Volume = Hauteur*Longueur*Largeur;
	
	// On affiche le résultat.
	System.out.println("Le volume est de " + Volume + ".");
}
}

  
